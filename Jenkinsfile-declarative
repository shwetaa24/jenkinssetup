pipeline {
    agent any

    parameters {
        booleanParam(name: 'SKIP_TEST', defaultValue: false, description: 'Skip the test stage')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/<your-username>/my-node-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            when {
                expression { return !params.SKIP_TEST }   // only run if SKIP_TEST = false
            }
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy') {
            when {
                allOf {
                    branch 'master'          // only run if branch is master
                    expression { currentBuild.currentResult == 'SUCCESS' }
                }
            }
            steps {
                echo "Deploying application..."
                sh 'echo Deploying Node.js app to server...'
            }
        }
    }

    post {
        success {
            echo 'Build success!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
